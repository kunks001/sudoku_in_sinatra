 <img id="logo" src="/images/logo.png">

  <div id="flash">
    <%= flash[:notice] %>
  </div>

  <div id="Sudoku">
    <form action="/" method="post">
      <% 3.times do |row| %>
        <div class="row">
          <% 3.times do |box| %>
            <div class="box">
              <% 3.times do |cell_row| %>
                <div class="cell_row">
                  <% 3.times do |cell| %>
                    <div class="cell">
                      <%= partial :_cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                    </div>
                  <%end%>
                </div>
              <%end%>
            </div>
          <%end%>
        </div>
      <%end%>
      
      <button class="clicked-button" name="clicked_button" type="submit" value="check_solution">
        Check solution
      </button>

      <button class="clicked-button" name="clicked_button" type="submit" value="save">
        Save
      </button>

      <% if @current_solution == session[:current_solution] || session[:puzzle] && @current_solution != session[:solution] %>
        <button class="clicked-button" name="clicked_button" type="submit" value="check_finished_solution">
          Bored? Check the solution!
        </button>
      <% end %>

    <% if @current_solution == session[:solution] %>
      <a href="/clear_solution"><button class="clicked-button" >
        Back to puzzle</button>
      </a>
    <% end %>
  </form> 
</div>

<a href="/easy_puzzle">New easy puzzle</a>
<a href="/hard_puzzle">New hard puzzle</a>
